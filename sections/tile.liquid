<!-- -- futures skincare start -- -->
<div class="future_skincare fs_dark">
    <div class="fs-content">
        <div class="mw-455 mx-auto text-start">
        {% if section.settings.heading != blank %}
            <h2 class="text-start">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.text_content != blank %}
            {{ section.settings.text_content }}
        {% endif %}
        {% if section.settings.text != blank %}
            <span>{{ section.settings.text }}</span>
        {% endif %}
        {% if section.settings.button_label != blank %}
            <a href="{{ section.settings.button_url }}" target="_blank" class="future_btn">{{ section.settings.button_label }}</a>
        {% endif %}
        </div>
    </div>
    {% if section.blocks.size > 0 %}
        <div class="fs-img">
            {%- for block in section.blocks -%}
            <div class="fs-block">
                <img class="img-fluid" src="{{ block.settings.image | img_url: '450x' }}" alt="{{ block.settings.image.alt | escape }}">
            </div>
        {%- endfor -%}
        </div>
    {% endif %}
    </section>
</div>
<!-- -- futures skincare end -- -->


