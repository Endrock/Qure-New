<!-- -- press slider app out start -- -->
<div class="app_press section">
    <div class="container1">
        <div class="press_bl py-2 mw-mob-100">
            {% if section.settings.heading != blank %}
                <div class="p_bl_header text-center p-0">
                    <p>{{ section.settings.heading }}</p>
                </div>
            {% endif %}
            <div class="app_press_slider">
                <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff"
                    class="swiper app_press_sl_content">
                    <div class="swiper-wrapper">
                        {%- for block in section.blocks -%}
                            {% if block.type == 'text' %}
                                <div class="swiper-slide">
                                    <div class="app_subhheading">
                                        {{ block.settings.text |  replace: '\n', '<br />'  }}
                                    </div>
                                </div>
                            {% endif %}
                        {%- endfor -%}
                    </div>
                </div>
                <div thumbsSlider="" class="swiper app_press_sl_img">
                    <div class="swiper-wrapper">
                        {%- for block in section.blocks -%}
                            {% if block.type == 'image' %}
                                <div class="swiper-slide">
                                    <div class="app_press_info">
                                        {% if block.settings.image != blank %}
                                            <img src="{{ block.settings.image | img_url: '450x' }}" alt="press">
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %} 
                        {%- endfor -%}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- -- press slider app out end -- -->

{% schema %}
    {
        "name": "Featured in",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "t:common.heading.label"
            }
        ],
        "blocks": [
            {
                "type": "text",
                "name": "t:common.text.label",
                "limit": 4,
                "settings": [
                    {
                        "type": "textarea",
                        "id": "text",
                        "label": "t:common.text.label"
                    }
                ]
		    },
            {
                "type": "image",
                "name": "t:common.image.label",
                "limit": 4,
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "t:common.image.label"
                    }
                ]
		    }
        ]
    }
{% endschema %}