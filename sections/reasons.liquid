<!-- -- 6 reasons section start -- -->
<div class="{{ section.settings.classname }} section-{{ section.id }} reasons section" id="reasons_section">
    <div class="container">
        {% if section.settings.heading != blank %}
        <div class="section_header text-start text-md-center">
            {% if section.settings.heading != blank %}
                <h2 class="title-lg paddingB">{{ section.settings.heading }}</h2> 
            {% endif %}

            {% if section.settings.text != blank %}
                {{ section.settings.text }}
            {% endif %}
        </div>
        {% endif %}
        <div class="row">
            <div class="reasons_wrapper{% if section.blocks.size == 6 %} reasons_wrapper_6{% endif %}">
                {%- for block in section.blocks -%}
                    {% assign variable_name = section.blocks.size %}
                    {% if block.type == 'icon' %}
                    <div class="rs_item">
                        {% if block.settings.image != blank %}
                            <div class="r_use_img">
                                <img src="{{ block.settings.image | img_url: '200x' }}" alt="{{ block.settings.image.alt | escape }}">
                            </div>
                        {% endif %}
                        {% if block.settings.text != blank %}
                            <div class="rs_item_content">
                                {{ block.settings.text }}
                            </div>
                        {% endif %}
                    </div>
                    {% endif %}
                {%- endfor -%}
            </div>
        </div>
    </div>
</div>
<!-- -- 6 reasons section end -- -->

{% style %}
.chest_pdp .section-{{ section.id }} .reasons_wrapper {
    display: grid;
    grid-template-columns: repeat({{ variable_name }},auto);
}
@media(max-width:767px) {
    .chest_pdp .section-{{ section.id }} .reasons_wrapper {
    display: grid;
    grid-template-columns: repeat(1,1fr);
}
}
{% endstyle %}

