<!-- -- result section start -- -->
<div class="result_s section">
    <div class="container">
        <div class="section_header text-start text-md-center">
            <h2 class="title-lg">
                {{ section.settings.heading }}
            </h2>
            {% if section.settings.text %}
                {{ section.settings.text }}
            {% endif %}
        </div>
        {% if section.blocks.size > 0 %}
            <div class="result_s_wrapper">
                <div class="swiper  dot_pagination result_slider_lp twa__swiper" id="twa__swiper-result_slider_lp"
                    data-section-id="result_slider_lp" data-autoplay="false" data-loop="false"
                    data-centerslide="false" data-mobile="1" data-tablet="2" data-desktop="3" data-spacing="20"
                    data-arrowleft="result_slider_lp-swiper-prev" data-arrowright="result_slider_lp-swiper-next">
                    <div class="swiper-wrapper">
                        {%- for block in section.blocks -%}
                            <div class="swiper-slide">
                                <div class="result_item">
                                    {% if block.settings.heading != blank %}
                                        <div class="skin_item_header d-block d-md-none">{{ block.settings.heading }}</div>
                                    {% endif %}
                                    <div class="skincare_left">
                                        {% if block.settings.image != blank %}
                                            <img class="img-fluid" src="{{ block.settings.image | img_url: '400x' }}" alt="">
                                        {% endif %}
                                        <div class="r_c_info">
                                            <div class="c_information">
                                                {% if block.settings.image_country != blank %}
                                                    <div class="flag_img pe-2">
                                                        <img class="img-fluid" src="{{ block.settings.image_country | img_url: '100x' }}" alt="">
                                                    </div>
                                                {% else %}
                                                    <div class="flag_img pe-2">
                                                        <img src="{{ 'america_f.webp' | asset_url }}" alt="" class="img-fluid">
                                                    </div> 
                                                {% endif %}
                                                <p class="r_c_name pe-4">{{ block.settings.client }}</p>
                                                <div class="verified_img pe-2">
                                                    <img src="{{ 'verified.svg' | asset_url }}" alt="">
                                                </div>
                                                <p>{{ section.settings.text_verified_customer }}</p>
                                            </div>
                                        </div>
                                    </div>
                                    {% if block.settings.heading != blank %}
                                        <div class="skin_item_header d-none d-md-block">{{ block.settings.heading }}</div>
                                    {% endif %}
                                    <div class="skincare_right">
                                        {% if block.settings.text != blank %}
                                            <div class="ss_list py-0">
                                                {{ block.settings.text }}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {%- endfor -%}
                    </div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>
        {% endif %}
    </div>
</div>
<!-- -- result section end -- -->

<style>
.result_s .skin_item_header {
    font-weight: 300;
    font-family: 'Canela Light';
    font-size: 28px;
    line-height: 32px;
    padding: 10px;
    margin: 0 10px;
    border-bottom: 1px solid #EDE7DD;
    letter-spacing: 0;
    opacity: 0.8;
}
.result_s .skincare_right {
    padding: 10px;
}
.result_s .r_c_info {
    padding: 4px 10px;
    background: #f4f4f4;
}

.result_s .result_s_wrapper .result_item .ss_list li {
    font-size: 13px;
    line-height: 24px;
    font-weight: 400;
}

@media(max-width:767px) {
    .result_s .skin_item_header {
        font-size: 22px;
        line-height: 28px;
    }

    .result_s .skincare_left {
        padding: 24px 16px 0px;
    }
}
</style>

