<!-- -- result section start -- -->
<div class="result_s section {{ section.settings.classname }}" id="result_section">
    <div class="container">
        <div class="section_header text-start text-md-center ms-0 m-md-auto mw-100">
            {% if section.settings.heading != blank %}
                <h2 class="title-lg paddingB original-copy">
                    {{ section.settings.heading }}
                </h2>
            {% endif %}
            {% if section.settings.heading_reduced != blank %}
                <h2 class="title-lg paddingB reduced-copy">
                    {{ section.settings.heading_reduced }}
                </h2>
            {% endif %}
        </div>

        <div class="result_s_wrapper">
            <div class="swiper dot_pagination result_slider">
                <div class="swiper-wrapper">
                    {%- for block in section.blocks -%}
                        {% case block.type %}
                            {% when 'result' %}
                                <div class="swiper-slide">
                                    <div class="result_item{% if block.settings.code != blank %} result_item_info_with_fixed{% endif %}">
                                        {% if block.settings.image != blank %}
                                            <div class="result_img_m">
                                                <img class="img-fluid" src="{{ block.settings.image | img_url: '450x' }}" alt="{{ block.settings.image.alt | escape }}">
                                            </div>
                                        {% endif %}

                                        <div class="result_c_info">
                                            <div class="r_flag">
                                                {% if block.settings.image_country != blank %}
                                                    <div class="flag_img">
                                                        <img class="img-fluid" src="{{ block.settings.image_country | img_url: '100x' }}" alt="">
                                                    </div>
                                                {% else %}
                                                    <div class="flag_img">
                                                        <img src="{{ 'america_f.webp' | asset_url }}" alt="" class="img-fluid">
                                                    </div>
                                                {% endif %}

                                                <p class="r_c_name pe-2">{{ block.settings.client }}</p>
                                            </div>
                                            <div class="star_gp">
                                                <img src="{{ 'results_star-full.svg' | asset_url }}" alt="">
                                                {% if block.settings.heading != blank %}
                                                    <p>{{ block.settings.heading }}</p>
                                                {% endif %}
                                            </div>
                                            <div class="reviewed">
                                                <p>{{ section.settings.text_reviewed | default: 'Reviewed in' }} {{ block.settings.text_country |  default: 'United States' }}</p>
                                            </div>
                                            <div class="verified_img">
                                                <img src="{{ 'verified.svg' | asset_url }}" alt="">
                                                <p>{{ section.settings.text_verified_customer }}</p>
                                            </div>
                                        </div>
                                        <div class="result_item_info">
                                            <div class="result_content">
                                                {% if block.settings.text != blank %}
                                                    {{ block.settings.text }}
                                                {% endif %}
                                            </div>
                                        </div>
                                        {% if block.settings.code != blank %}
                                            {{ block.settings.code }}
                                        {% endif %}
                                    </div>
                                </div>
                            {% endcase %}
                    {%- endfor -%}
                </div>
                <div class="pagination_navigation">
                    <div class="swiper-pagination"></div>
                    <div class="qureSlider-swiper-prev swiper-button-prev swiper-button"></div>
                    <div class="qureSlider-swiper-next  swiper-button-next swiper-button"></div>
                </div>
            </div>
        </div>

        {%- for block in section.blocks -%}
            {% case block.type %}
                {% when 'button' %}
                    <div class="get_confident-btn mx-auto {{ block.settings.custom_class }}">
                        <a class="btn btn-lg btn-primary buy_btn" href="{{ block.settings.button_url }}" title="{{ block.settings.button_label | escape }}">{{ block.settings.button_label }}</a>
                    </div>
            {% endcase %}
        {% endfor %}



    </div>
</div>
<!-- -- result section end -- -->


