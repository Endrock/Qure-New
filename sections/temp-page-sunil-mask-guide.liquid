<script>
    document.addEventListener('DOMContentLoaded', function () {
        const letStartBtn = document.querySelector('.let_start');
        const firstBox = document.getElementById('first__box');
        const progressContainer = document.querySelector('.progress__containerGroup');
        const tablinks = document.querySelectorAll('.tablinks');

        const progress_step = document.querySelectorAll('.progress_step');
        const tabcontents = document.querySelectorAll('.tabcontent');
        const tabButton = document.querySelector('.tab_button');
        const previewBtn = document.querySelector('.preview-btn');
        const nextBtn = document.querySelector('.next-btn');
        const firstBoxTab = document.querySelector('.first__box');

        progressContainer.style.display = 'none';
        tabButton.style.display = 'none';

        letStartBtn.addEventListener('click', function () {
            firstBox.style.display = 'none';
            progressContainer.style.display = 'block';
            tabButton.style.display = 'flex';
            showTab(tablinks[0].getAttribute('href').substring(1));
            updateButtonVisibility();


            $(window).scrollTop($(".tabing-new").offset().top - 100); // Scroll to the top of the section
            return false;
        });

        firstBoxTab.addEventListener('click', function () {
            firstBox.style.display = 'block';
            progressContainer.style.display = 'none';
            tabButton.style.display = 'none';
        });

        function showTab(tabId) {
            tabcontents.forEach(tabcontent => {
                if (tabcontent.id === tabId) {
                    tabcontent.style.display = 'block';
                } else {
                    tabcontent.style.display = 'none';
                }
            });
            updateActiveTab(tabId);
            progressContainer.style.display = 'block';
            tabButton.style.display = 'flex';
            firstBox.style.display = 'none';
        }

        function prevTab() {
            let currentIndex = Array.from(tablinks).findIndex(tablink => tablink.classList.contains('active'));
            currentIndex--;
            if (currentIndex < 0) {
                currentIndex = 0;
            }
            showTab(tablinks[currentIndex].getAttribute('href').substring(1));
            updateButtonVisibility();
            addActiveClassToProgressStep(currentIndex);
        }

        // Go to the next tab
        function nextTab() {
            let currentIndex = Array.from(tablinks).findIndex(tablink => tablink.classList.contains('active'));
            currentIndex++;
            if (currentIndex >= tablinks.length) {
                currentIndex = tablinks.length - 1;
            }
            showTab(tablinks[currentIndex].getAttribute('href').substring(1));
            updateButtonVisibility();
            addActiveClassToProgressStep(currentIndex);
        }
        function updateButtonVisibility() {
            const currentTabId = Array.from(tablinks).find(tablink => tablink.classList.contains('active')).getAttribute('href').substring(1);
            const currentIndex = Array.from(tablinks).findIndex(tablink => tablink.classList.contains('active'));

            if (currentIndex === 0) {
                previewBtn.classList.add('hide');
            } else {
                previewBtn.classList.remove('hide');
            }

            console.log("total length = ", tablinks.length);
            console.log("current Index = ", currentIndex);

            if (currentIndex === 3) {
                nextBtn.style.display = 'none';
                previewBtn.classList.add('showLast');
            } else {
                nextBtn.style.display = 'block';
                previewBtn.classList.remove('showLast');
            }
        }

        function updateActiveTab(tabId) {
            tablinks.forEach(tablink => {
                if (tablink.getAttribute('href').substring(1) === tabId) {
                    tablink.classList.add('active');
                    tablink.parentElement.classList.add('active');
                } else {
                    tablink.classList.remove('active');
                    tablink.parentElement.classList.remove('active');
                }
            });
        }
        function addActiveClassToProgressStep(index) {
            progress_step.forEach((step, i) => {
                if (i === index) {
                    step.classList.add('active');
                } else {
                    step.classList.remove('active');
                }
            });
        }
        previewBtn.addEventListener('click', function () {
            prevTab();
        });
        nextBtn.addEventListener('click', function () {
            nextTab();
        });

        // Event listener for tab links
        tablinks.forEach((tablink, index) => {
            tablink.addEventListener('click', function (event) {
                event.preventDefault();
                const tabId = this.getAttribute('href').substring(1);
                showTab(tabId);
                updateButtonVisibility();
                const parentProgressStep = tablink.closest('.progress_step');
                if (parentProgressStep) {
                    progress_step.forEach(step => step.classList.remove('active'));
                    parentProgressStep.classList.add('active');
                }
            });
        });

        $(document).on("click", ".tablinks", function () {
            event.preventDefault();
            const tabId = this.getAttribute('href').substring(1);
            showTab(tabId);
            updateButtonVisibility();
            const parentProgressStep = this.closest('.progress_step');
            if (parentProgressStep) {
                progress_step.forEach(step => step.classList.remove('active'));
                parentProgressStep.classList.add('active');
            }
        });
    });
</script>

