<!-- Comparison Section table start -->
<div class="bg-white comparison-section section anti_comparison-section">
    {% if section.settings.heading != blank %}
        <div class="section_header text-md-center mb-3 px-4">
            <h2 class="title-lg d-none d-md-block pb-2">{{ section.settings.heading }}</h2>
            <h2 class="title-lg d-block d-md-none pb-2">{{ section.settings.heading }}</h2>
        </div>   
    {% endif %}

    <div class="container">
        <div class="comparison_row--main">
            <div class="comparison-row border-0">
                <div class="row g-0">
                    <div class="col-6"></div>
                    <div class="col-6">
                        <div class="row g-0">
                            <div class="col-md-3 col-6">
                                <div class="comp-col comp_hdr bg-default py-0">
                                    {% if section.settings.image_first != blank %}
                                        <div class="comp_mask_img">
                                            <img src="{{ section.settings.image_first | img_url: '250x' }}" alt="first image" class="img-fluid">
                                            {% if section.settings.text_first != blank %}
                                                <h6>{{ section.settings.text_first }}</h6>
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-md-9 col-6">
                                <div class="comp-col comp_hdr py-0">
                                    {% if section.settings.image_second != blank %}
                                        <div class="comp_mask_img">
                                            <img src="{{ section.settings.image_second | img_url: '250x' }}" alt="second image" class="img-fluid">
                                            {% if section.settings.text_second != blank %}
                                                <h6>{{ section.settings.text_second }}</h6>
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="comparison_row-main">
            {%- for block in section.blocks -%}
                {% case block.type %}
                    {% when 'option' %}
                        <div class="comparison-row">
                            <div class="row g-0">
                                <div class="col-6">
                                    <div class="comp-col comp-row__text-wrapper">
                                        <div class="comp-row__title">{{ block.settings.text  }}</div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="row g-0 h-100">
                                        <div class="col-md-3 col-6">
                                            <div
                                                class="comp-col comp_col-check d-flex align-items-center justify-content-center bg-default">
                                                {% if block.settings.first_option == true %}
                                                    <span class="g__checkBox"></span>
                                                {% else %}
                                                    <span class="cross__checkBox"></span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="col-md-9 col-6">
                                            <div class="comp-col comp_col-check d-flex align-items-center justify-content-center pt-md-4 pt-2">
                                                {% if block.settings.second_option == true %}
                                                    <span class="g__checkBox"></span>
                                                {% else %}
                                                    <span class="cross__checkBox"></span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                {% endcase %}
            {% endfor %}
        </div>

        {%- for block in section.blocks -%}
            {% case block.type %}
                {% when 'button' %}
                    <div class="get_confident-btn mw-452 mx-auto">
                        <a class="btn btn-lg btn-primary buy_btn" href="{{ block.settings.button_url }}" title="{{ block.settings.button_label | escape }}">{{ block.settings.button_label }}</a>
                    </div>
            {% endcase %}
        {% endfor %}
    </div>
</div>
<!-- Comparison Section table end -->


