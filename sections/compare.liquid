<div class="{{ section.settings.classname }}">
    <div class="container">
        <div class="section_header text-center mb-4">
            {% if section.settings.heading %}
                <h2 class="title-lg paddingB mx-auto original-copy text-lg-center text-start">
                    {{ section.settings.heading }}
                </h2> 
            {% endif %}
            {% if section.settings.heading_reduced %}
                <h2 class="title-lg paddingB mx-auto reduced-copy">
                    {{ section.settings.heading_reduced }}
                </h2> 
            {% endif %}
            {% if section.settings.text %}
                <div class="subtitle original-copy">{{ section.settings.text }}</div>
            {% endif %}
            {% if section.settings.text_reduced %}
                <div class="subtitle reduced-copy">{{ section.settings.text_reduced }}</div>
            {% endif %}
        </div>
        {% if section.blocks.size > 0 %}
            <div class="bs_grid">
                {%- for block in section.blocks limit:2 -%}
                    {% case block.type %}
                        {% when 'product' %}
                            {% assign title = block.settings.product.title %}
                            {% assign price = block.settings.product.price |  money_without_trailing_zeros %}
                        {% else %}
                            {% assign title = block.settings.heading %}
                            {% assign price = block.settings.price %}
                    {% endcase %}
                    <div class="bs_item">
                        <div class="bs_img">
                            <img class="img-fluid beauty_img" src="{{ block.settings.image | img_url: '600x' }}" alt="">
                        </div>
                        <div class="bs_content">
                            <h4 class="d-block d-md-none">{{ block.settings.mob_text }}</h4>
                            <h4 class="d-none d-md-block">{{ title | replace: '\n', '&nbsp;' }}</h4>
                            {% if price != blank %}
                                <div class="bs_price pb-0">
                                    <h3>
                                        <span class="sale_p">{{ price }}</span>
                                    </h3>
                                </div>                               
                            {% endif %}
                            {% if block.settings.text != blank %}
                                {{ block.settings.text |  replace:  '<p>', '<p class="price__label mt-0">'  }}
                            {% endif %}
                        </div>
                        {% comment %} <div class="bs_content d-none d-md-block">
                            <h4>{{ title | replace: '\n', '&nbsp;' }}</h4>
                            {% if price != blank %}
                                <div class="bs_price">
                                    <h3>
                                        <span class="sale_p">{{ price }}</span>
                                    </h3>
                                    {% if block.settings.text != blank %}
                                        {{ block.settings.text |  replace:  '<p>', '<p class="price__label">'  }}
                                    {% endif %}
                                </div>
                            {% endif %}
                        </div> {% endcomment %}
                        <div class="bs_feature {{ block.settings.style }}">
                            {% capture list %}
                                {{ 
                                    block.settings.list
                                    |  replace: '<p>', '<ul>'  
                                    |  replace: '</p>', '</ul>'
                                    |  replace: '<em>', '<li class="correct" style="border-bottom: 1px solid #EDE7DD">'
                                    |  replace: '</em>', '</li>'
                                 }}
                            {% endcapture %}

                            {% if block.settings.style == 'correctCircle' %}
                                {{ list | replace: '<ul>', '<ul class="rightCircle">' }}
                            {% else %}
                                {{ list | replace: '<ul>', '<ul class="wrongCircle">' }}
                            {% endif %}
                        </div>
                    </div>
                    {% if forloop.index == 1 %}
                        <div class="bs_vs_item">
                            <div class="bs_versace">
                                <span>vs</span>
                            </div>
                        </div>
                    {% endif %}
                {%- endfor -%}
            </div>
        {% endif %}
    </div>
</div>

