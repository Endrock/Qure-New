<!-- -- featured promotion start -- -->
<div class="featured_promotion {{ section.settings.background }}">
    <div class="container">
        <div class="fp-wrapper">
            {%- for block in section.blocks -%}
                <div class="fp_item">
                    {% if block.settings.image != blank %}
                        <div class="fp_icon">
                            <img src="{{ block.settings.image | img_url: '150x' }}" alt="{{ block.settings.image.alt | escape }}">
                        </div>
                    {% endif %}
                    {% if block.settings.text != blank %}
                        <div class="fp_icon_text">
                            {{ block.settings.text }}
                        </div> 
                    {% endif %}
                </div>
            {%- endfor -%}
        </div>
    </div>
</div>
<!-- -- featured promotion end -- -->


