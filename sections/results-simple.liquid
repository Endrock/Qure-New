{% assign random_number = 'now' | date: "%s" | modulo: 100 | plus: 1 %}

<!-- -- result start -- -->
{% if section.blocks.size > 0 %}
<div class="anti-creams-result">
    <div class="container">
        <div id="anti_result_slider_{{ random_number }}" class="swiper dot_pagination anti_result_slider">
            <div class="swiper-wrapper">
                {%- for block in section.blocks -%}
                    <div class="swiper-slide">
                        <div class="result_item" style="height: 531.016px;">
                            {% if block.settings.image != blank %}
                                <div class="result_img_m">
                                    <img src="{{ block.settings.image | img_url: '450x' }}" alt="{{ block.settings.image.alt | escape }}" class="img-fluid">
                                </div>
                            {% endif %}

                            <div class="result_c_info">
                                <div class="r_flag d-flex">
                                    {% if block.settings.image_country != blank %}
                                        <div class="flag_img">
                                            <img class="img-fluid" src="{{ block.settings.image_country | img_url: '100x' }}" alt="">
                                        </div>
                                    {% else %}
                                        <div class="flag_img">
                                            <img src="{{ 'america_f.webp' | asset_url }}" alt="" class="img-fluid">
                                        </div>
                                    {% endif %}
                                    {% if block.settings.client != blank %}
                                        <p class="r_c_name pe-2 fw-bold">{{ block.settings.client }}</p>
                                    {% endif %}
                                    <div class="verified_img d-flex">
                                        <img src="https://qureskincaredns.com/new/assets/verified.svg" alt="" class="pe-2">
                                        <p>{{ section.settings.text_verified_customer }}</p>
                                    </div>
                                </div>
                                <div class="reviewed">
                                    <p>{{ section.settings.text_reviewed | default: 'Reviewed in' }} {{ block.settings.text_country |  default: 'United States' }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {%- endfor -%}
            </div>
            <div class="pagination_navigation">
                <div class="swiper-pagination"></div>
                <div class="antiSlider-swiper-prev swiper-button swiper-button-prev"></div>
                <div class="antiSlider-swiper-next swiper-button swiper-button-next"></div>
            </div>
        </div>
    </div>
</div>
{% endif %}
<!-- -- result end -- -->

<script>
    document.addEventListener('DOMContentLoaded', function() {
        //result slider
        var swiper = new Swiper("#anti_result_slider_{{ random_number }} ", {
            spaceBetween: 15,
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            navigation: {
                nextEl: ".antiSlider-swiper-next",
                prevEl: ".antiSlider-swiper-prev",
            },
            slidesPerView: 1.3,
            breakpoints: {
                556: {
                    slidesPerView: 1.3,
                },
                768: {
                    slidesPerView: 2,
                },
                1024: {
                    slidesPerView: 3,
                },
            },
        });
    });
</script>


