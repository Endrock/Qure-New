{% assign random_number = 'now' | date: '%s' | modulo: 100 | plus: 1 %}
<!-- -- capsule dropdowns start -- -->
<div class="purify_anything section {{ section.settings.background }}">
  <div class="container">
    <div class="section_header text-start text-md-center mb-4">
      {% if section.settings.heading != blank %}
        <h2 class="title-lg paddingB">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <p class="pb-0">{{ section.settings.text }}</p>
      {% endif %}
    </div>
  </div>
  <div class="purify_anything-inner">
    <div class="container">
      <div class="purify_anything-content">
        <div class="accordion" id="purifyAccordion_{{ random_number }}">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'dropdown' %}
                <div class="accordion-item">
                  <h2 class="accordion-header" id="purify_{{ block.id }}">
                    <button
                      class="accordion-button collapsed"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#collapse_{{ block.id }}"
                      aria-expanded="true"
                      aria-controls="collapse_{{ block.id }}"
                    >
                      {% if block.settings.cap_image != blank %}
                        <img
                          src="{{ block.settings.cap_image | img_url: '58x' }}" alt="{{ block.settings.cap_image.alt }}">
                      {% endif %}
                      {% if block.settings.text != blank %}
                        <span class="ps-2">{{ block.settings.text }}</span>
                      {% endif %}
                    </button>
                  </h2>
                  <div
                    id="collapse_{{ block.id }}"
                    class="accordion-collapse collapse"
                    aria-labelledby="purify_{{ block.id }}"
                    data-bs-parent="#purifyAccordion_{{ random_number }}"
                  >
                    {% if block.settings.drop_text != blank %}
                      <div class="accordion-body">
                        {{ block.settings.drop_text }}
                      </div>
                    {% endif %}
                  </div>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
<!-- -- capsule dropdowns end -- -->

{% schema %}
{
  "name": "t:sections.cap_dropdowns.label",
  "settings": [
    {
      "type": "select",
      "id": "background",
      "label": "t:common.background.label",
      "options": [
        {
          "value": "bg-yellow",
          "label": "t:common.background.yellow"
        },
        {
          "value": "bg-lightGrey",
          "label": "t:common.background.grey"
        },
        {
          "value": "bg_clr_transparent",
          "label": "t:common.background.transparent"
        }
      ],
      "default": "bg_clr_transparent"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:common.heading.label"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "t:common.text.label"
    }
  ],
  "blocks": [
    {
      "type": "dropdown",
      "name": "t:common.text.dropdown",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "cap_image",
          "label": "t:common.image.label"
        },
        {
          "type": "text",
          "id": "text",
          "label": "t:common.text.label"
        },
        {
          "type": "richtext",
          "id": "drop_text",
