<!-- -- How does this affect your skin? start -- -->
<div class="affect_skin section {{ section.settings.background }}">
  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <div class="section_header w-100 mw-100 pe-md-4">
          {% if section.settings.heading != blank %}
            <h2 class="title-lg">{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.text != blank %}
            <p>{{ section.settings.text }}</p>
          {% endif %}
        </div>
      </div>
      <div class="col-md-7">
        <div class="swiper swiper-containerAffect2 dot_pagination">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'slide' %}
                  <div class="swiper-slide">
                    <div class="affect_item">
                      {% if block.settings.slide_image != blank %}
                        <img
                          src="{{ block.settings.slide_image | img_url: 'master' }}"
                          alt="{{ block.settings.slide_image.alt }}"
                          class="img-fluid d-md-block d-none"
                        >
                      {% endif %}
                      {% if block.settings.slide_imageMob != blank %}
                        <img
                          src="{{ block.settings.slide_imageMob | img_url: 'master' }}"
                          alt="{{ block.settings.slide_imageMob.alt }}"
                          class="img-fluid d-md-none"
                        >
                      {% endif %}
                      {% if block.settings.heading != blank %}
                        <h6>{{ block.settings.heading }}</h6>
                      {% endif %}
                      {% if block.settings.text != blank %}
                        <p>
                          {{ block.settings.text }}
                        </p>
                      {% endif %}
                    </div>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
          <div class="pagination_navigation mt-3 mt-md-5">
            <div class="swiper-pagination"></div>
            <div class="swiper-button-prev swiper-arrow-prev swiper-button"></div>
            <div class="swiper-button-next swiper-arrow-next swiper-button"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- -- How does this affect your skin? end -- -->

{% schema %}
