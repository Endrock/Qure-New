<style>
    .ac_desc a {
        text-decoration: underline!important;
        color: #212529!important;
        margin-top: 1rem!important;
    }
</style>

{% include 'guide-assoc-array', section: section, __parent_title: 'header', __separator: '###' %}

{% capture section_body_1_desktop %}
    <div class="tab-pane fade1 active1 show1" id="target_block_desktop_1" role="tabpanel" aria-labelledby="target_block_desktop_1-tab">
        <div class="ac_desc_grid">
            {% for __item in __itemsArray1 %}
                {% if __typesArray1[forloop.index0] == 'description' %}<div class="ac_desc{% if forloop.index0 == 0 %} faq{% endif %}">{% endif %}
                {{ __item }}
                {% if __typesArray1[forloop.index] == 'description' %}</div>{% endif %}
                {% if forloop.index ==  __itemsArray1.size %}</div>{% endif %}
            {% endfor %}
        </div>
    </div> 
{% endcapture %}

{% capture section_body_2_desktop %}
    <div class="tab-pane fade" id="target_block_desktop_2" role="tabpanel" aria-labelledby="target_block_desktop_2-tab">
        <div class="ac_desc_grid">
            {% for __item in __itemsArray2 %}
                <div class="ac_desc{% if forloop.index0 == 2 %} ingredient_text{% endif %}">
                    {{ __item }}
                </div>
            {% endfor %}
        </div>
    </div>
{% endcapture %}

{% capture section_body_3_desktop %}
    <div class="tab-pane fade" id="target_block_desktop_3" role="tabpanel" aria-labelledby="target_block_desktop_3-tab">
        <div class="ac_desc_grid d-block">
            <div class="row g-md-5">
                <div class="col-md-6">
                    <div class="ac_desc">
                        {% for __item in __itemsArray3 %}
                            {% if __typesArray3[forloop.index0] == 'heading' %}
                                <div class="as_desc_header">{{ __item }}</div>
                                {% break %}
                            {% endif %}
                        {% endfor %}
                        <div class="ac_desc_grid_video show_how-work">
                            {% for __item in __itemsArray3 %}
                                {% if __typesArray3[forloop.index0] == 'video' %}
                                    {{ __item }}
                                    {% if __typesArray3[forloop.index] != 'video' %}
                                        {% assign __itemsOffset3 = forloop.index %}
                                        {% break %}
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="ac_desc">
                        {% for __item in __itemsArray3 offset: __itemsOffset3 %}
                            {% if __typesArray3[forloop.index0] == 'heading' %}
                                <div class="as_desc_header">{{ __item }}</div>
                                {% break %}
                            {% endif %}
                        {% endfor %}
                        <div class="ac_desc_grid_video d-flex gap-2">
                            {% for __item in __itemsArray3  offset: __itemsOffset3 %}
                                {% if __typesArray3[forloop.index0] == 'video' %}
                                    {{ __item }}
                                    {% if __typesArray3[forloop.index] != 'video' %}
                                        {% break %}
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endcapture %}


{% capture section_body_1_mobile %}
