{% endcapture %}

{% capture section_body_3_mobile %}
    <div id="ac_target_block_mobile_3" class="accordion-collapse collapse">
        <div class="accordion-body">
            <div class="ac_desc_grid d-block">
                <div class="row g-4 g-md-5">
                    <div class="col-md-6">
                        <div class="ac_desc">
                            {% for __item in __itemsArray3 %}
                                {% if __typesArray3[forloop.index0] == 'heading' %}
                                    <div class="as_desc_header">{{ __item }}</div>
                                    {% break %}
                                {% endif %}
                            {% endfor %}
                            <div class="ac_desc_grid_video show_how-work">
                                {% for __item in __itemsArray3 %}
                                    {% if __typesArray3[forloop.index0] == 'video' %}
                                        {{ __item }}
                                        {% if __typesArray3[forloop.index] != 'video' %}
                                            {% assign __itemsOffset3 = forloop.index %}
                                            {% break %}
                                        {% endif %}
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="ac_desc">
                            {% for __item in __itemsArray3 offset: __itemsOffset3 %}
                                {% if __typesArray3[forloop.index0] == 'heading' %}
                                    <div class="as_desc_header">{{ __item }}</div>
                                    {% break %}
                                {% endif %}
                            {% endfor %}
                            <div class="ac_desc_grid_video d-flex gap-2">
                                {% for __item in __itemsArray3  offset: __itemsOffset3 %}
                                    {% if __typesArray3[forloop.index0] == 'video' %}
                                        {{ __item }}
                                        {% if __typesArray3[forloop.index] != 'video' %}
                                            {% break %}
                                        {% endif %}
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endcapture %}

{% assign header_count_desktop = 0 %}
{% assign header_count_mobile = 0 %}

<!-- -- amazing content start -- -->
<div class="amazing_content section" id="tabsAccordion">
    <div class="container">
        {% if section.settings.heading != blank %}
            <div class="section_header mw-680 text-md-center mb-3">
                <h2 class="title-lg">{{ section.settings.heading }}</h2>
            </div>
        {% endif %}
        <div class="amazing_content_wrap d-none d-md-block">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                {%- for block in section.blocks -%}
                    {% if block.type == 'header' %}
                        {% assign header_count_desktop = header_count_desktop |  plus: 1 %}
                        <li class="nav-item active1" role="presentation">
                            {% if block.settings.heading != blank %}
                                <h6>{{ block.settings.heading }}</h6>
                            {% endif %}
                            {% if block.settings.text != blank %}
                                <p>{{ block.settings.text }}</p>
                            {% endif %}
                            {% if block.settings.image != blank %}
                                <img src="{{ block.settings.image | img_url: '500x' }}" alt="" class="img-fluid mt-2">
                            {% endif %}
                            {% if block.settings.button_label != blank %}
                                {% capture target_block_desktop %}target_block_desktop_{{ header_count_desktop }}{% endcapture %}
                                <button class="nav-link active ac_drop_btn" id="{{ target_block_desktop }}-tab" data-bs-toggle="tab"
                                    data-bs-target="#{{ target_block_desktop }}" type="button" role="tab" aria-controls="{{ target_block_desktop }}"
                                    aria-selected="true">
                                    <div class="container">
                                        <p>{{ block.settings.button_label }}</p>
                                    </div>
                                </button>
                            {% endif %}
                        </li>
                    {% endif %}
                {%- endfor -%}
            </ul>
            <div class="tab-content" id="myTabContent">
                {{ section_body_1_desktop }}
                {{ section_body_2_desktop }}
                {{ section_body_3_desktop }}
            </div>
        </div>
        <div class="amazing_content_wrap d-block d-md-none">
            <div class="accordion" id="acAccordion">
                {%- for block in section.blocks -%}
                    {% if block.type == 'header' %}
                        {% assign header_count_mobile = header_count_mobile |  plus: 1 %}
                        <div class="accordion-item" id="mob_item{{ header_count_mobile }}">
                            <h2 class="accordion-header" id="acheadingOne">
                                {% if block.settings.heading != blank %}
                                    <h6>{{ block.settings.heading }}</h6>
                                {% endif %}
                                {% if block.settings.text != blank %}
                                    <p>{{ block.settings.text }}</p>
                                {% endif %}
                                {% if block.settings.image != blank %}
                                    <img src="{{ block.settings.image | img_url: '500x' }}" alt="" class="img-fluid mt-2">
                                {% endif %}
                                {% if block.settings.button_label != blank %}
                                    {% capture target_block_mobile %}target_block_mobile_{{ header_count_mobile }}{% endcapture %}
                                    <button class="accordion-button ac_drop_btn collapsed" type="button"
                                        data-bs-toggle="collapse" data-bs-target="#ac_{{ target_block_mobile }}" aria-expanded="true"
                                        aria-controls="ac_{{ target_block_mobile }}">
                                        {{ block.settings.button_label }}
                                    </button>
                                {% endif %}
                            </h2>
                            {% case header_count_mobile %}
                                {% when 1 %}
                                    {{ section_body_1_mobile }}
                                {% when 2 %}
                                    {{ section_body_2_mobile }}
                                {% when 3 %}
                                    {{ section_body_3_mobile }}                                
                            {% endcase %}
                        </div>
                    {% endif %}
                {%- endfor -%}
            </div>
        </div>
    </div>
</div>
<!-- -- amazing content end -- -->

<script>
    // for making the amazing content inactive all tabs by default
    document.addEventListener('DOMContentLoaded', function () {
        // Ensure no tab is active
        document.querySelectorAll('#myTab .nav-link').forEach(function (tab) {
            tab.classList.remove('active');
            tab.setAttribute('aria-selected', 'false');
        });

        // Ensure no tab content is active
        document.querySelectorAll('#myTabContent .tab-pane').forEach(function (content) {
            content.classList.remove('show', 'active');
        });
    });
</script>

