            "limit": 6,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "t:common.image.label"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "t:sections.featuredin-extended.name"
        }
    ]
}
{% endschema %}