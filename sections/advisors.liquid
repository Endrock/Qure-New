<!-- --  board of advisors start -- -->
<div class="board_of-advisors">
    <div class="container">
        <div class="section_header">
            {% if section.settings.heading != blank %}
                <h2 class="title-lg  mx-auto text-center d-md-block d-none">
                    {{ section.settings.heading }}
                </h2>
            {% endif %}
            {% if section.settings.heading_mobile != blank %}
                <h2 class="title-lg  mx-auto text-center d-md-none d-block">
                    {{ section.settings.heading_mobile }}
                </h2>
            {% endif %}

            {% if section.settings.subheading %}
                <p class="mw-680 text-center">{{ section.settings.subheading }}</p>
            {% endif %}
            {% if section.settings.subheading_mobile %}
                <p class="d-md-none d-block pt-3 text-center">{{ section.settings.subheading_mobile }}</p>
            {% endif %}
        </div>
        {% if section.blocks.size > 0 %}
            <div class="swiper twa__swiper targetSkin dot_pagination" id="twa__swiper-targetSkin-2"
                data-section-id="targetSkin-2" data-autoplay="false" data-loop="false" data-centerslide="false"
                data-mobile="1.24" data-tablet="4" data-desktop="4" data-spacing="20"
                data-arrowleft="targetSkin-swiper-prev-2" data-arrowright="targetSkin-swiper-next-2">
                <div class="swiper-wrapper">
                    {%- for block in section.blocks -%}
                        <div class="swiper-slide">
                            <div class="advisor_content">
                                {% if block.settings.image != blank %}
                                    <img src="{{ block.settings.image | img_url: '500x' }}" alt="advisor_{{ forloop.index }}" class="img-fluid">
                                {% endif %}
                                <div class="advisor_detail">
                                    <div class="accordion accordion-flush" id="advisorOne">
                                        <div class="accordion-item bg-transparent">
                                            <h2 class="accordion-header" id="flush-headingOne">
                                                <button class="accordion-button collapsed bg-transparent" type="button"
                                                    data-bs-toggle="collapse" data-bs-target="#flush-collapse-{{ forloop.index }}"
                                                    aria-expanded="false" aria-controls="flush-collapse-{{ forloop.index }}">
                                                </button>
                                                <div class="text-white ps-3">
                                                    {% if block.settings.heading != blank %}
                                                        <h6 class="mb-0">{{ block.settings.heading }}</h6>
                                                    {% endif %}
                                                    {% if block.settings.subheading != blank %}
                                                        <p class="pt-0">{{ block.settings.subheading }}</p>
                                                    {% endif %}
                                                </div>
                                            </h2>
                                            <div id="flush-collapse-{{ forloop.index }}" class="accordion-collapse collapse"
                                                aria-labelledby="flush-headingOne" data-bs-parent="#advisorOne">
                                                <div class="accordion-body pt-2">
                                                    {{ block.settings.text }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {%- endfor -%}
                </div>
                <div class="pagination_navigation d-md-none">
                    <div class="swiper-pagination"></div>
                    <div class="targetSkin-swiper-prev-2 swiper-button-prev swiper-button"></div>
                    <div class="targetSkin-swiper-next-2 swiper-button-next swiper-button"></div>
                </div>
            </div>
        {% endif %}
    </div>
</div>
<!-- --  board of advisors end -- -->


{% schema %}
    {
        "name": "t:sections.advisors.name",
        "class": "section-advisors",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "t:common.heading.label"
            },
            {
                "type": "text",
                "id": "heading_mobile",
                "label": "t:common.heading.mobile.label"
            },
            {
                "type": "textarea",
                "id": "subheading",
                "label": "t:common.subheading.label"
            },
            {
                "type": "textarea",
                "id": "subheading_mobile",
                "label": "t:common.subheading.mobile.label"
            }
        ],
        "blocks": [
            {
                "type": "object",
                "name": "t:common.object.label",
                "limit": 4,
                "settings": [
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "t:common.heading.label"
                    },
                    {
                        "type": "text",
                        "id": "subheading",
                        "label": "t:common.subheading.label"
                    },
                    {
                        "type": "richtext",
                        "id": "text",
                        "label": "t:common.text.label"
                    },
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "t:common.image.label"
                    }
                ]
		    }
        ],
        "presets": [
			{
				"name": "t:sections.advisors.name"
			}
        ]
    }
{% endschema %}