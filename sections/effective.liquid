<!-- -- effective face creams start -- -->
<div class="effective_creams section">
    <div class="container">
        {% if section.settings.heading != blank %}
            <div class="section_header text-md-center mw-546 mb-4">
                <h2 class="title-lg d-none d-md-block">{{ section.settings.heading }}</h2>
                <h2 class="title-lg d-block d-md-none">{{ section.settings.heading }}</h2>
            </div>  
        {% endif %}

        <div class="row">
            <div class="col-md-7">
                {%- for block in section.blocks -%}
                    {% case block.type %}
                        {% when 'image' %}
                            <div class="effective_creams_img pe-md-5">
                                {% if block.settings.image != blank %}
                                    <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.image.alt | escape }}" class="img-fluid">
                                {% endif %}
                            </div>
                    {% endcase %}
                {% endfor %}
            </div>
            <div class="col-md-5">
                <div class="mt-5 mt-md-0">
                    <div class="progress_grid">
                        {%- for block in section.blocks -%}
                            {% case block.type %}
                                {% when 'option' %}
                                    {% assign dashoffset = 100 | minus: block.settings.percent_bar %}
                                    <div class="progressInfo">
                                        {% if block.settings.heading != blank %}
                                            <div class="light_green_tag">{{ block.settings.heading }}</div>
                                        {% endif %}
                                        <div class="progressCont">
                                            <p><span class="progressWrapper">
                                                    <span class="progessInfo text-dark">{{ block.settings.percent_bar }}%</span>
                                                    <svg class="vMQQx" height="77" width="77" viewBox="-29 -29 58 58">
                                                        <defs>
                                                            <linearGradient id="gradient" x1="0" x2="0" y1="1" y2="0">
                                                                <stop offset="0%" stop-color="#C7E7DC"></stop>
                                                                <stop offset="100%" stop-color="#C7E7DC"></stop>
                                                            </linearGradient>
                                                        </defs>
                                                        <circle stroke="rgba(221, 224, 228, 1)" fill="none" pathLength="100"
                                                            class="K4v4P" r="24" style="stroke-width: 1px;"></circle>
                                                        <circle visibility="visible" fill="none" pathLength="100"
                                                            transform="rotate(-90)" class="OKwUu" r="24"
                                                            stroke="url(#gradient)"
                                                            style="stroke-dasharray: 100; stroke-dashoffset: {{ dashoffset }}; stroke-width: 5px;">
                                                        </circle>
                                                    </svg>
                                                </span>
                                            </p>
                                        </div>
                                        {{ block.settings.text }}
                                    </div>
                            {% endcase %}
                        {% endfor %}
                    </div>
                    {%- for block in section.blocks -%}
                        {% case block.type %}
                            {% when 'before_after' %}
                                <div class="ec_b_a">
                                    {% if block.settings.image != blank %}
                                        <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.image.alt | escape }}" class="img-fluid">
                                    {% endif %}
                                    {% if block.settings.text != blank %}
                                        <p>{{ block.settings.text }}</p>
                                    {% endif %}
                                </div>
                        {% endcase %}
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>
</div>
<!-- -- effective face creams start -- -->


