 <!-- -- customer favourite start -- -->
 <div class="customer_fav section">
    <div class="container">
        <div class="row">
            {% if section.settings.heading != blank %}
            <div class="section_header mb-4">
                <h2 class="title-lg mx-auto text-start text-lg-center">
                    {{ section.settings.heading }}
                </h2>
            </div>
            {% endif %}
            <div class="customer_fav_grid">
                {% for block in section.blocks %}
                <a href="{{ block.settings.pd_link }}" class="fav_pdt best_seller">
                    {% if block.settings.pd_img != blank %}
                    <div class="fav_pdt_img">
                        <img src="{{ block.settings.pd_img | img_url: '265x' }}" alt="" class="img-fluid">
                    </div>
                    {% endif %}
                    <div class="fav_pdt_info">
                        <div class="refill_review">
                            {% if block.settings.rating != blank %}
                            <div class="star_gp">
                                <img src="{{ block.settings.rating | img_url: '131x' }}" alt="">
                            </div>
                            {% endif %}
                            {% if block.settings.rating_text != blank %}
                            <p class="text-sm fw-normal" style="text-decoration: none;">{{ block.settings.rating_text }}</p>
                            {% endif %}
                        </div>
                       
                        <div class="fav_pdt_name">{{ block.settings.pd_name }}</div>
                        <div class="fav_pdt_price">{% if block.settings.from != blank %} from {% endif %} <span>{{ block.settings.price }}</span></div>
                    </div>
                    {% if block.settings.bestseller != blank %}
                    <div class="fav_best_seller">Bestseller</div>
                    {% endif %}
                </a>
                {% endfor %}
            </div>
            {% if section.settings.btn != blank %}
            <a href="{{ section.settings.btn_url }}" class="btn_black mx-auto mt-5">{{ section.settings.btn }}</a>
            {% endif %}
        </div>
    </div>
</div>
<!-- -- customer favourite end -- -->

{% schema %}
{
    "name": "t:sections.product_grid.label",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "t:common.heading.label"
        },
        {
            "type": "text",
            "id": "btn",
            "label": "t:common.button.label"
        },
        {
            "type": "url",
            "id": "btn_url",
            "label": "t:common.button.url.label"
        }
    ],
    "blocks":[
        {
            "type": "product",
            "name": "t:common.product.label",
            "limit": 4,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "pd_img",
                    "label": "t:common.product.image.label"
                },
                {
                    "type": "text",
                    "id": "pd_name",
                    "label": "t:product.name.label"
                },
                {
                    "type": "checkbox",
                    "id": "from",
                    "label": "t:common.checkbox.from",
                    "default" :false
                },
                {
                    "type": "text",
                    "id": "price",
                    "label": "t:common.price.label"
                },
                {
                    "type": "checkbox",
                    "id": "bestseller",
                    "label": "t:sections.bestseller.name",
                    "default" :false
                },
                {
                    "type": "image_picker",
                    "id": "rating",
                    "label": "t:common.rating.label"
                },
                {
                    "type": "text",
                    "id": "rating_text",
                    "label": "t:product.badge.label"
                },
                {
                    "type": "url",
                    "id": "pd_link",
                    "label": "t:product.url.label" 
                } 
            ]
        }
    ],
    "presets": [
        {
            "name": "t:sections.product_grid.label"
        }
    ]
}
{% endschema %}