<!-- -- skin barrier start -- -->
<div class="skin_barrier section">
    <div class="container">
        {% if section.settings.heading != blank %}
            <div class="section_header mw-546 m-0 me-auto">
                <h2 class="title-lg paddingB">{{ section.settings.heading }}
                </h2>
            </div>
        {% endif %}
        <div class="row align-items-end">
            <div class="col-md-6">
                {% if section.settings.image != blank %}
                    <div class="sb_img">
                        <img src="{{ section.settings.image | img_url: '500x' }}" alt="image" class="img-fluid">
                    </div>
                {% endif %}
            </div>
            <div class="offset-md-1 col-md-5">
                <div class="skin_barrier_wrap">
                    {%- for block in section.blocks -%}
                        {% case block.type %}
                            {% when 'option' %}
                                <div class="skin_barrier_item">
                                    {% if block.settings.image != blank %}
                                        <img src="{{ block.settings.image | img_url: '250x' }}" alt="option_{{ forloop.index }}" class="img-fluid">
                                    {% endif %}
                                    {% if block.settings.text != blank %}
                                     <p>{{ block.settings.text }}</p>
                                    {% endif %}
                                </div>
                        {% endcase %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- -- skin barrier start -- -->


{% schema %}
    {
        "name": "t:sections.text-block.name",
        "class": "text-block",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "t:common.heading.label"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "t:common.image.label"
            }
        ],
        "blocks": [
            {
                "type": "option",
                "name": "t:common.option.name",
                "limit": 10,
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "t:common.image.label"
                    },
                    {
                        "type": "text",
                        "id": "text",
                        "label": "t:common.text.label"
                    }
                ]
		    }
        ],
        "presets": [
			{
				"name": "t:sections.text-block.name"
			}
        ]
    }
{% endschema %}