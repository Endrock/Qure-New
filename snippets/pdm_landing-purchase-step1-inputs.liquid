
{% liquid
  assign price_3 = productThree.price | money_without_currency
  if price_3 == blank
    assign price_3 = 0
  endif
  assign dropdownId1 = name | append: '-collapse-' | append: '1'
  assign dropdownId2 = name | append: '-collapse-' | append: '2'
  assign dropdownId3 = name | append: '-collapse-' | append: '3'

%}
<div
  id="inputs-{{ name }}"
  class="inputs-{{ name }} landing-one-container {% if name == 'products1' %} show-inputs {% endif %}"
>
  <input
    data-id-product="{{ productOne.selected_variant.id }}"
    data-identifier="1"
    data-position:="1"
    type="radio"
    id="{{name}}-one"
    name="{{ name }}"
    value='{
      "position":1,
      "titleBundle":"{{ productOneInfo.title_product }}", 
      "id":{{ productOne.selected_or_first_available_variant.id }}, 
      "discountPrice":{{ productOne.price | money_without_currency }},
      "price":{{ productOne.compare_at_price | money_without_currency }}, 
      "discountPriceQuota":{{ productOne.price |  divided_by: 4 | money_without_currency }},
      "discountPercent":{{ productOne.compare_at_price | minus: productOne.price | times: 100 | divided_by: productOne.compare_at_price | round: 0 }},
      "input": "{{ name }}"
    }'
    checked
  >
  <label for="{{name}}-one">
    {% render 'pdm_landing-purchase-step1-card', 
      productData: productOne, 
      productInfo: productOneInfo
      uniqueId: 'collapse1'
      parentContainer: dropdownId1,
      checkIcon: checkIcon,
      crossIcon: crossIcon,
      starIcon: starIcon
    %}
  </label>
  <input
    data-id-product="{{ productTwo.id }}"
    data-identifier="2"
    data-position:="2"
    type="radio"
    id="{{name}}-two"
    name="{{ name }}"
    value='{
      "position":2,
      "titleBundle":"{{ productTwoInfo.title_product }}",
      "id":{{ productTwo.selected_or_first_available_variant.id }}, 
      "discountPrice":{{ productTwo.price | money_without_currency }},
      "price":{{ productTwo.compare_at_price | money_without_currency }}, 
      "discountPriceQuota":{{ productTwo.price | divided_by: 4 | money_without_currency  }},
      "discountPercent":{{ productTwo.compare_at_price | minus: productTwo.price | times: 100 | divided_by: productTwo.compare_at_price | round: 0 }},
      "input":"{{ name }}"
    }'
  >
  <label for="{{name}}-two">
    {% render 'pdm_landing-purchase-step1-card', 
      productData: productTwo, 
      productInfo: productTwoInfo 
      uniqueId: 'collapseTwo'
      parentContainer: dropdownId2,
      checkIcon: checkIcon,
      crossIcon: crossIcon,
      starIcon: starIcon
    %}
  </label>
  <input
    data-id-product="{{ productThree.id }}"
    data-identifier="3"
    data-position:="3"
    type="radio"
    id="{{name}}-three"
    name="{{ name }}"
    value='{
      "position":3,
      "titleBundle":"{{ productThreeInfo.title_product }}",
      "id":{{ productThree.selected_or_first_available_variant.id }}, 
      "discountPrice":{{ productThree.price | money_without_currency }},
      "price":{{ price_3 }}, 
      "discountPriceQuota":{{ productThree.price | divided_by: 4 | money_without_currency }},
      "discountPercent":0,
      "input":"{{ name }}"
    }'
  >
  <label for="{{name}}-three">
    {% render 'pdm_landing-purchase-step1-card', 
      productData: productThree, 
      productInfo: productThreeInfo 
      uniqueId: 'collapseThree'
      parentContainer: dropdownId3,
      checkIcon: checkIcon,
      crossIcon: crossIcon,
      starIcon: starIcon
    %}
  </label>
  </div>
  