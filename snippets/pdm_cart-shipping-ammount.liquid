{% comment %}
  Usage: {% render 'pdm_cart-shipping-ammount', settingsGamification: section.settings, cartTotal: cart.items_subtotal_price  %}
{% endcomment %}

{% liquid
  assign enableFreeShipping = settingsGamification.enable_free_shipping_treshold
  assign differenceFreeShipping = freeShippingTresholdCents | minus: cartTotal
%}

<div class="drawer_shipping gamification-test">


{% if enableFreeShipping %}
  {% if differenceFreeShipping < 0  %}
    <p>Free</p>
  {% endif %}
  {% if differenceFreeShipping > 0 and cartTotal > 0 %}
    <p><span class="money">$10</span></p>
  {% endif %}
{% else %}
  <p><span class="money">$10</span></p>
{% endif %}



</div>