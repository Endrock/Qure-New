{% if template == 'product.sunil-led-mask' %}
    <div class="mask_select_clr">
        <h5>Select color:</h5>
        <div class="clr_options">
            <div class="form-check p-0">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" {% if product.handle == 'q-rejuvalight-pro-facewear' %}checked{% endif %}>
                <label class="form-check-label" for="flexRadioDefault1">
                    <a href="/products/q-rejuvalight-pro-facewear">
                        <img loading="eager" src="{{ 'mask_blue.webp' | asset_url }}" alt="Mask blue" width="80" height="80">
                    </a>
                    <h6>Blue</h6>
                </label>
            </div>
            <div class="form-check p-0">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" {% if product.handle == 'q-rejuvalight-pro-facewear-black' %}checked{% endif %}>
                <label class="form-check-label" for="flexRadioDefault2">
                    <a href="/products/q-rejuvalight-pro-facewear-black">
                        <img loading="eager" src="{{ 'mask_onyx.webp' | asset_url }}" alt="Mask onyx" width="80" height="80">
                    </a>
                    <h6>Onyx</h6>
                </label>
            </div>
        </div>
    </div>
{% endif %}