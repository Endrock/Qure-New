<script>
    var gdrpModal = new bootstrap.Modal(document.getElementById('gdpr'), {});
    var gdrpSettingsModal = new bootstrap.Modal(document.getElementById('gdpr_settings'), {});

    function gdpr_setCookie(name, value, days) {
        var date = new Date();
        date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
        var expires = "expires=" + date.toUTCString();
        document.cookie = name + "=" + value + ";" + expires + ";path=/";
    }

    // Function to get a cookie by name
    function gdpr_getCookie(name) {
        var nameEQ = name + "=";
        var ca = document.cookie.split(';');
        for (var i = 0; i < ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == ' ') c = c.substring(1);
            if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length, c.length);
        }
        return null;
    }

    document.addEventListener('DOMContentLoaded', function() {


    
        document.querySelector('#gdpr_settings_change').addEventListener('click', function() {
            event.preventDefault();
            gdrpSettingsModal.show();
        });

        if (!getCookie("gdrp")) {
            setTimeout(() => {
                gdrpModal.show();
            }, 750);
        }

        document.querySelector('#gdpr_reject').addEventListener('click', function() {
            event.preventDefault();
            gdpr_setCookie("gdrp", "true", 365);
            gdrpModal.hide();
        });

        document.querySelector('#gdpr_accept').addEventListener('click', function() {
            event.preventDefault();
            gdpr_setCookie("gdrp", "true", 365);
            gdrpModal.hide();
        });

        document.querySelector('#gdpr_accept_settings').addEventListener('click', function() {
            event.preventDefault();
            gdpr_setCookie("gdrp", "true", 365);
            gdrpModal.hide();
            gdrpSettingsModal.hide();
        });
    });
</script>